{
  "name": "vaadin-vscode",
  "displayName": "Vaadin",
  "description": "Vaadin extension for VSCode - improves user experience while developing Vaadin projects. Currently supports part of Vaadin Copilot features.",
  "version": "1.0.0",
  "publisher": "vaadin",
  "license": "Apache-2.0",
  "repository": "https://github.com/vaadin/vscode-plugin",
  "pricing": "Free",
  "engines": {
    "vscode": "^1.87.0"
  },
  "keywords": [
    "vaadin",
    "copilot"
  ],
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:*"
  ],
  "main": "./out/extension.js",
  "icon": "./theme/icon256.png",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "capabilities": {
    "virtualWorkspaces": false,
    "untrustedWorkspaces": {
      "supported": false
    }
  },
  "contributes": {
    "commands": [
      {
        "when": "!vaadin.isRunning",
        "command": "vaadin.start",
        "title": "Start Vaadin Copilot integration"
      },
      {
        "when": "vaadin.isRunning",
        "command": "vaadin.stop",
        "title": "Stop Vaadin Copilot integration"
      }
    ],
    "productIconThemes": [
      {
        "id": "vaadin-vscode",
        "label": "Vaadin VSCode Icons",
        "path": "./theme/vaadin-product-icon-theme.json"
      }
    ]
  },
  "dependencies": {
    "@types/express": "4.17.21",
    "express": "4.19.1",
    "properties-file": "^3.5.3",
    "socket.io": "4.7.5"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.87.0",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "@vscode/test-cli": "^0.0.6",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3"
  }
}