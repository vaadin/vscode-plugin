{
  "name": "vaadin",
  "displayName": "vaadin",
  "description": "Official Vaadin plugin for VSCode, currently featuring undo support for Vaadin Copilot modifications.",
  "version": "0.0.1",
  "publisher": "vaadin",
  "repository": "https://github.com/vaadin/vscode-plugin",
  "engines": {
    "vscode": "^1.87.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:*"
  ],
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "capabilities": {
    "virtualWorkspaces": false,
    "untrustedWorkspaces": {
      "supported": false
    }
  },
  "contributes": {
    "commands": [
      {
        "when": "!vaadin.isRunning",
        "command": "vaadin.start",
        "title": "Start Vaadin Copilot integration"
      },
      {
        "when": "vaadin.isRunning",
        "command": "vaadin.stop",
        "title": "Stop Vaadin Copilot integration"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "!vaadin.isRunning",
          "command": "vaadin.start",
          "group": "2_workspace"
        },
        {
          "when": "vaadin.isRunning",
          "command": "vaadin.stop",
          "group": "2_workspace"
        }
      ]
    }
  },
  "dependencies": {
    "@types/express": "4.17.21",
    "express": "4.19.1",
    "properties-file": "^3.5.3",
    "socket.io": "4.7.5"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.87.0",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "@vscode/test-cli": "^0.0.6",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3"
  }
}
