{
  "name": "vaadin-vscode",
  "displayName": "Vaadin",
  "description": "Official Vaadin plugin for VS Code. Create Vaadin projects and improve Vaadin Copilot experience!",
  "version": "1.0.0",
  "publisher": "vaadin",
  "license": "Apache-2.0",
  "repository": "https://github.com/vaadin/vscode-plugin",
  "pricing": "Free",
  "engines": {
    "vscode": "^1.87.0"
  },
  "keywords": [
    "vaadin",
    "copilot",
    "hilla",
    "flow"
  ],
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:*",
    "onCommand:vaadin.*"
  ],
  "main": "./out/extension.js",
  "icon": "./resources/icon256.png",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test"
  },
  "capabilities": {
    "virtualWorkspaces": false,
    "untrustedWorkspaces": {
      "supported": false
    }
  },
  "contributes": {
    "commands": [
      {
        "command": "vaadin.start",
        "title": "Start Vaadin Copilot integration",
        "category": "Vaadin"
      },
      {
        "command": "vaadin.stop",
        "title": "Stop Vaadin Copilot integration",
        "category": "Vaadin"
      },
      {
        "command": "vaadin.newProject",
        "title": "Generate new Vaadin project",
        "category": "Vaadin"
      }
    ],
    "icons": {
      "server-running": {
        "description": "Vaadin icon for running server",
        "default": {
          "fontPath": "./resources/vaadin-vscode.woff",
          "fontCharacter": "\\e800"
        }
      },
      "server-stopped": {
        "description": "Vaadin icon for stopped server",
        "default": {
          "fontPath": "./resources/vaadin-vscode.woff",
          "fontCharacter": "\\e802"
        }
      }
    }
  },
  "dependencies": {
    "@types/express": "4.17.21",
    "adm-zip": "^0.5.12",
    "axios": "^1.6.8",
    "express": "4.19.1",
    "js-convert-case": "^4.2.0",
    "properties-file": "^3.5.3",
    "socket.io": "4.7.5"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.5.5",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.87.0",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "@vscode/test-cli": "^0.0.6",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3"
  }
}
