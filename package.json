{
  "name": "vaadin-vscode",
  "displayName": "Vaadin",
  "description": "Official Vaadin extension for Visual Studio Code. Create Vaadin projects and improve Vaadin Copilot experience!",
  "version": "1.0.0-SNAPSHOT",
  "publisher": "vaadin",
  "license": "Apache-2.0",
  "repository": "https://github.com/vaadin/vscode-plugin",
  "pricing": "Free",
  "engines": {
    "vscode": "^1.87.0"
  },
  "keywords": [
    "vaadin",
    "copilot",
    "flow"
  ],
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "workspaceContains:*",
    "onCommand:vaadin.*"
  ],
  "main": "./out/extension.js",
  "icon": "./resources/icon256.png",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test",
    "prettier": "npx prettier --write src"
  },
  "capabilities": {
    "virtualWorkspaces": false,
    "untrustedWorkspaces": {
      "supported": false
    }
  },
  "contributes": {
    "configuration": {
      "title": "Vaadin",
      "properties": {
        "vaadin.sendUsageStatistics": {
          "type": "boolean",
          "default": true,
          "description": "Send usage statistics - help us improve Vaadin plugin by sending anonymous usage statistics. Please note that this will not include personal data or any sensitive information, such as source code, file names, etc. The data sent complies with the Vaadin Privacy Policy."
        }
      }
    },
    "commands": [
      {
        "command": "vaadin.start",
        "title": "Start Vaadin Copilot integration",
        "category": "Vaadin"
      },
      {
        "command": "vaadin.newProject",
        "title": "Generate new Vaadin project",
        "category": "Vaadin"
      },
      {
        "command": "vaadin.setupHotswap",
        "title": "Setup Hotswap Agent",
        "category": "Vaadin"
      },
      {
        "command": "vaadin.debugUsingHotswap",
        "title": "Debug using Hotswap Agent",
        "category": "Vaadin"
      }
    ],
    "icons": {
      "server-running": {
        "description": "Vaadin icon for running server",
        "default": {
          "fontPath": "./resources/vaadin-vscode.woff",
          "fontCharacter": "\\e800"
        }
      }
    },
    "menus": {
      "editor/title/run": [
        {
          "command": "vaadin.debugUsingHotswap",
          "group": "1_javadebug@30",
          "when": "resourceExtname == .java"
        }
      ],
      "explorer/context": [
        {
          "command": "vaadin.debugUsingHotswap",
          "group": "1_javaactions@99",
          "when": "resourceLangId == java && resourceExtname == .java"
        }
      ],
      "editor/context": [
        {
          "command": "vaadin.debugUsingHotswap",
          "group": "javadebug@99",
          "when": "editorLangId == java && resourceExtname == .java"
        }
      ]
    },
    "walkthroughs": [
      {
        "id": "vaadin.walkthrough",
        "title": "Get started with Vaadin",
        "description": "Create a Vaadin project, enable Hotswap Agent, and connect Vaadin Copilot.",
        "primary": true,
        "steps": [
          {
            "id": "vaadin.walkthrough.createProject",
            "title": "Create a Vaadin project",
            "description": "Use the wizard to scaffold a new Vaadin project without leaving VS Code.",
            "media": {
              "markdown": "resources/walkthrough/create-project.md"
            },
            "completionEvents": [
              "onCommand:vaadin.newProject"
            ]
          },
          {
            "id": "vaadin.walkthrough.hotswap",
            "title": "Enable Hotswap Agent",
            "description": "Install the Hotswap Agent runtime to debug with fast reloads.",
            "media": {
              "markdown": "resources/walkthrough/hotswap.md"
            },
            "completionEvents": [
              "onCommand:vaadin.setupHotswap",
              "onCommand:vaadin.debugUsingHotswap"
            ]
          },
          {
            "id": "vaadin.walkthrough.copilot",
            "title": "Start Vaadin Copilot integration",
            "description": "Expose the local endpoint that lets Vaadin Copilot write files and undo changes.",
            "media": {
              "markdown": "resources/walkthrough/copilot.md"
            },
            "completionEvents": [
              "onCommand:vaadin.start"
            ]
          },
          {
            "id": "vaadin.walkthrough.learnMore",
            "title": "Learn more about Vaadin",
            "description": "Explore documentation, community resources, and share ideas for the VS Code plugin.",
            "media": {
              "markdown": "resources/walkthrough/learn-more.md"
            }
          }
        ]
      }
    ]
  },
  "dependencies": {
    "@amplitude/analytics-node": "^1.3.8",
    "adm-zip": "^0.5.16",
    "axios": "^1.7.9",
    "express": "^4.21.1",
    "jdk-utils": "^0.5.1",
    "js-convert-case": "^4.2.0",
    "properties-file": "^3.5.3",
    "tar": "^7.4.3"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.5.5",
    "@types/express": "5.0.0",
    "@types/node": "18.x",
    "@types/vscode": "^1.87.0",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "@vscode/test-cli": "^0.0.6",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.56.0",
    "prettier": "^3.5.2",
    "typescript": "^5.3.3"
  }
}
